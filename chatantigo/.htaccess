# Habilita o RewriteEngine
RewriteEngine On

# Exclui firebase-messaging-sw.js das regras de redirecionamento
RewriteCond %{REQUEST_URI} !^/firebase-messaging-sw\.js$

# Redireciona todas as requisições para index.php, exceto se o arquivo ou diretório existir
RewriteCond %{REQUEST_FILENAME} !-f
RewriteCond %{REQUEST_FILENAME} !-d
RewriteRule ^(.*)$ index.php?route=$1 [L,QSA]

# Define o tipo MIME para arquivos JavaScript
AddType application/javascript .js

# Permite CORS para todos os domínios (ajuste conforme necessário)
Header set Access-Control-Allow-Origin "*"
